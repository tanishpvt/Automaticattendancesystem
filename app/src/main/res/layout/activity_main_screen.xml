<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intermediate.MainScreen">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/lightWhite"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="19dp">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/start_1"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="-20dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="studying.json"
            app:lottie_loop="true">

        </com.airbnb.lottie.LottieAnimationView>

        <EditText
            android:id="@+id/tvs_1"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_1"
            android:text="Records"
            android:fontFamily="@font/new_rocker"
            />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvs_1"
            android:background="@drawable/rounded_button_colored"
            android:text="Download Attendance"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/tvs_2"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_1"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/new_rocker"
            android:gravity="center"
            android:text="Having Issues with our Attendance system ? \n Go Manually"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn_2"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvs_2"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_colored"
            android:text=" Take  Attendance"
            android:textColor="@color/white" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/img"
            android:layout_width="293dp"
            android:layout_height="340dp"
            android:layout_below="@id/btn_2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-158dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="flower.json"
            app:lottie_loop="true">

        </com.airbnb.lottie.LottieAnimationView>

    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>